#!/bin/bash

if [ -n "$PATH" ]; then
  old_PATH=$PATH:; PATH=
  while [ -n "$old_PATH" ]; do
    x=${old_PATH%%:*}       # Get the leftmost entry
    case ":$PATH:" in
      *:"$x":*) ;;          # Already in PATH, skip
      *) PATH=$PATH$x:;;    # Add to PATH
    esac
    old_PATH=${old_PATH#*:}  # Remove the processed leftmost entry
  done
  PATH=${PATH%:}            # Remove trailing colon
fi
export PATH
